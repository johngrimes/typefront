<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title>TypeFront<%= @title.blank? ? '' : ' &raquo; ' %><%= @title %></title>
    <%= yield(:styles) %>
    <!--[if lte IE 7]>
    <%= yield(:styles_ie7) %>
    <![endif]-->
    <!--[if IE 6]>
    <%= yield(:styles_ie6) %>
    <![endif]-->
    <%= yield(:scripts) %>
  </head>
  <body>
    <div id="page-wrapper">
      <div id="page">
        <div id="header">
          <h1 id="logo"><%= link_to image_tag('layouts/standard/logo.png', :alt => 'TypeFront'), home_url %></h1>
        </div>

        <div id="sidebar">
        <% unless !current_user || @omit_sidebar %>
          <ul id="menu">
            <li id="menu-myfonts"><%= link_to 'My fonts', fonts_url %></li>
            <li id="menu-myaccount"><%= link_to 'My account', account_url %></li>
            <li id="menu-api"><%= link_to 'Developer API', documentation_index_url %></li>
            <li id="menu-loggedin">
              <% if current_user %>
              Logged in as <%= current_user.email %><%= link_to 'Logout', logout_url %>
              <% else %>
              Not currently logged in<%= link_to 'Login', login_url %>
              <% end %>
            </li>
          </ul>
        <% end %>

          <div id="messages">
            <%- flash.each do |name, msg| -%>
              <%= content_tag :div, msg, :id => "flash_#{name}" %>
            <%- end -%>
          </div>
          &nbsp;
        </div>

        <div id="body">
          <%= yield %>
        </div>
      </div>
    </div>

    <div id="footer">
      <%= render :partial => 'layouts/footer' %>
    </div>

    <% if RAILS_ENV == 'production' %>
      <%= javascript_include_tag 'common/analytics', :cache => 'cache/common/analytics' %>
    <% end %>
  </body>
</html>
