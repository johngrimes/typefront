- @title = "Demo of #{@font.full_name}"
- content_for(:styles) do
  = stylesheet_link_tag 'fonts/demo'
  %style{:type => 'text/css'}
    = include_code(@font)
    = "\n"
    = "p { font-family: \"#{@font.font_family}\", sans-serif; }"
- pangram = 'Painful zombies quickly watch a jinxed graveyard.'
#page
  - sizes = [72, 60, 48, 36, 30, 24, 18, 14, 12, 11, 10, 9, 8, 6]
  - sizes.each do |size|
    %p{:style => "font-size: #{size}px"}
      = pangram

#dark-page
  - sizes.each do |size|
    %p{:style => "font-size: #{size}px"}
      = pangram
