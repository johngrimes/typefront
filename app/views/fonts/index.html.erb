<% content_for(:styles) do %>
  <%= stylesheet_link_tag 'common/forms', 'fonts/index', fonts_url(:id => @font.id, :format => 'css') %>
<% end %>
<% content_for(:scripts) do %>
  <%= javascript_include_tag 'jquery', 'fonts/index' %>
<% end %>

<h1>My fonts</h1>

<% if !@fonts.empty? %>
  <ul class="fonts">
  <% @fonts.each do |font| %>
    <li class="font clearfix">
      <div class="font-inner clearfix">
        <div class="description">
          <h2 class="name font-<%= font.id %>"><%= link_to font.font_family, font, :class => 'name' %></h2>
          <% if !font.font_subfamily.blank? %>
            <div class="face"><%= font.font_subfamily %></div>
          <% end %>
        </div>
        <%= link_to '<span>Remove font</span>', font, :class => 'remove-font icon icon-trash', :confirm => 'Are you sure you want to remove this font?', :method => :delete %>
      </div>
    </li>
  <% end %>
  </ul>
<% else %>
  <p class="empty-message">You have not uploaded any fonts yet.</p>
<% end %>
